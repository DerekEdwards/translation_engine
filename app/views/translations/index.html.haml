.col-md-1
.col-md-10
  .row
    .col-md-4
    .col-md-4 
      %h1.text-center
        Translations
    .col-md-4.text-right
      = link_to translation_engine.new_translation_path do
        Add Key
  .row
    %table.table
      %tr
        %th= translate_helper(:key)
        - @locales.each do |locale|
          %th= locale.name
        %th.text-center
          = translate_helper(:delete)
      - @translation_keys.each do |translation_key|
        %tr
          %td= translation_key.name
          - @locales.each do |locale|
            %td
              - current_translation = translation_key.translation(locale)
              - if current_translation and not current_translation.value.blank?
                = link_to current_translation.value.truncate(50), translation_engine.edit_translation_path(current_translation.id)
              - else
                - path = (current_translation && current_translation.value.blank?) ? translation_engine.edit_translation_path(current_translation.id) : translation_engine.new_translation_path(key: translation_key.name, key_locale: locale.name.to_s)
                = link_to translate_helper(:add), path
          %td.text-center
            =button_to 'Delete', translation_engine.translation_key_path(translation_key), {method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure?  This action cannot be undone!"}}
            
